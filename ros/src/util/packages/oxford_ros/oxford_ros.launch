<launch>

<param name="use_sim_time" value="true" />

<arg name="dir" />
<arg name="rate" value="1.0" />
<arg name="start" value="0" />

<node name="oxford_player" pkg="oxford_ros" type="player.py" args="--dir=$(arg dir) --rate=$(arg rate) --start=$(arg start)" output="screen" />

<!-- TF setup; copied from Oxford Dataset SDK -->
<node name="ins_tf" pkg="tf" type="static_transform_publisher" args="-1.7132 0.1181 1.1948 0.0050 0.0400 -0.0125 camera ins 10" />
<node name="ldmrs_tf" pkg="tf" type="static_transform_publisher" args="1.5349 0.0090 1.3777 -0.0299 0.0767 0.0205 camera ldmrs 10" />

</launch>