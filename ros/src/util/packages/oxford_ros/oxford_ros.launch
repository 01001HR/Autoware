<launch>

<param name="use_sim_time" value="true" />

<arg name="dir" />
<arg name="rate" default="1.0" />
<arg name="start" default="0" />

<node name="oxford_player" pkg="oxford_ros" type="player.py" args="--dir=$(arg dir) --rate=$(arg rate) --start=$(arg start)" output="screen" />

<!-- TF setup; copied from Oxford Dataset SDK -->
<node name="base_link_tf" pkg="tf" type="static_transform_publisher" args="0 0 0 1.571 0 0 base_link ins 10" />
<node name="ins_tf" pkg="tf" type="static_transform_publisher" args="1.72 0 1.07 -0.006 -0.040 0.013 ins camera 10" />
<node name="ldmrs_tf" pkg="tf" type="static_transform_publisher" args="1.98 0.13 -1.2 -0.0299 0.0767 0.0205 camera ldmrs 10" />
<node name="lms_front_tf" pkg="tf" type="static_transform_publisher" args="1.98 -0.13 -1.2 0.0356 -1.4572 -0.0437 camera lms_front 10" />

</launch>